<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <com.example.vkwatchcustomview.CustomViewClock
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        app:hasSecondHand="false"
        app:numeralsType="roman" />

    <com.example.vkwatchcustomview.CustomViewClock
        android:layout_width="350dp"
        android:layout_height="350dp"

        app:hasSecondHand="true"
        app:numeralsType="arabic"/>

    <com.example.vkwatchcustomview.CustomViewClock
        android:layout_width="200dp"
        android:layout_height="300dp"

        app:primaryColor="@color/white"
        app:secondaryColor="@color/blue"
        app:secondHandColor="@color/red"
        app:hasSecondHand="true"
        app:numeralsType="none"/>

</LinearLayout>